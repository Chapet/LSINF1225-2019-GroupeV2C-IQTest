<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@drawable/background"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- include your toolbar layout-->
        <include layout="@layout/toolbar"/>

        <!-- Let's add fragment -->
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/logical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/titletop"
                    android:layout_marginBottom="@dimen/bott"
                    android:text="@string/logicaltest"
                    android:textColor="@color/ecriture"
                    android:textSize="@dimen/text" />

                <TextView
                    android:id="@+id/math"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="@dimen/text"
                    android:layout_marginBottom="@dimen/bott"
                    android:text="@string/mathtest"
                    android:textColor="@color/ecriture" />

                <TextView
                    android:id="@+id/memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="@dimen/text"
                    android:layout_marginBottom="@dimen/bott"
                    android:text="@string/memorytest"
                    android:textColor="@color/ecriture" />

                <TextView
                    android:id="@+id/spatial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="@dimen/text"
                    android:layout_marginBottom="@dimen/bott"
                    android:text="@string/spatialtest"
                    android:textColor="@color/ecriture"
                    />

                <TextView
                    android:id="@+id/mental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="@dimen/text"
                    android:layout_marginBottom="@dimen/bott"
                    android:text="@string/mentalarith"
                    android:textColor="@color/ecriture" />


                <TextView
                    android:id="@+id/paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="@dimen/text"
                    android:layout_marginBottom="@dimen/bott"
                    android:text="@string/paperfold"
                    android:textColor="@color/ecriture" />

                <TextView
                    android:id="@+id/textentree"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/bott"
                    android:text="@string/practice_different_categories_to_improve_your_iq_results_or_for_healty_brain_training"
                    android:textColor="@color/ecriture"
                    android:textSize="@dimen/subtext" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <!--
         Navigation view to show the menu items
    -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:menu="@menu/nav_item" />

</android.support.v4.widget.DrawerLayout>

